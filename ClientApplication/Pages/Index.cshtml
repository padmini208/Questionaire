@page
@model IndexModel
@{
    ViewData["Title"] = "BHHC Reasons to be hired";

}
<html>

<head>
    <title> Three Reasons Why</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/form-validation.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" crossorigin="anonymous">
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">BHHC - REASONS FOR GETTING HIRED</h1>
    </div>

    <div id="error_reasons" class="border-danger text-danger"></div>
    <br />
    <div class="Message   text-danger"></div>

    <div class="container">

        <button id="NewReasonButton" class="btn btn-primary btn-block">New Reason Entry</button><br /><br />

        <form id="newReasonsForm">
             
            <div class="form-group row">


                <label for="FirstName" class="col-sm-2 col-form-label" >First Name</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="FirstName" placeholder="First Name">
                    <span id="error-Lname"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="LastName" class="col-sm-2 col-form-label">Last Name</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="LastName" placeholder="Last Name">
                    <span id="error-Lname"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Email" placeholder="Email">
                    <span id="error-Email"></span>
                </div>

            </div>
            <div class="form-group row">
                <label for="FirstReason" class="col-sm-2 col-form-label">First Reason</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="FirstReason" placeholder="First Reason">
                    <span id="error-FReason"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="SecondReason" class="col-sm-2 col-form-label">Second Reason</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="SecondReason" placeholder="Second Reason">
                    <span id="error-SReason"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="ThirdReason" class="col-sm-2 col-form-label">First Reason</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="ThirdReason" placeholder="Third Reason">
                    <span id="error-TReason"></span>
                </div>
            </div>

            <button id="submitReasons" type="button" class="btn btn-primary">Add Reason</button>
        </form>

        <div id="updateFormDiv">
            <form id="updateForm">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="hidden" class="form-control" id="ReasonId">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="UpdateFirstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="UpdateFirstName" placeholder="First Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="UpdateLastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="UpdateLastName" placeholder="Last Name">

                    </div>
                </div>
                <div class="form-group row">
                    <label for="UpdateEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="UpdateEmail" placeholder="Email">

                    </div>
                </div>

                <div class="form-group row">
                    <label for="UpdateReasonOne" class="col-sm-2 col-form-label">First Reason</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="UpdateReasonOne" placeholder="Reason One">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="UpdateReasonTwo" class="col-sm-2 col-form-label">Second Reason</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="UpdateReasonTwo" placeholder="Reason Two">

                    </div>
                </div>

                <div class="form-group row">
                    <label for="UpdateReasonThree" class="col-sm-2 col-form-label">Third Reason</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="UpdateReasonThree" placeholder="Reason Three">
                    </div>
                </div>

                <button id="UpdateReasonButton" type="button" class="btn btn-primary">Update Reason</button>
            </form>
        </div>

        <table id="ReasonsTable" class="table table-bordered table-hover">
            <thead class=" align-content-center">
            <th>First Name</th>
            <th>Last Name</th>
            <th>First Reason</th>
            <th>Second Reason</th>
            <th>Third Reason</th>
            <th>Email</th>
            <th>Actions</th>
            </thead>
            <tbody id="ReasonsBody"></tbody>
        </table>
    </div>


</body>
</html>

@section scripts {

    <script src="~/js/site.js"></script>
    <script src="~/js/form-validation.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    
}

