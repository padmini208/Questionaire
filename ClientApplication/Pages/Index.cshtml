@page
@model IndexModel
@{
    ViewData["Title"] = "BHHC Reasons to be hired";

}
<html>

<head>
    <title> Three Reasons Why</title>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" crossorigin="anonymous">


</head>
<body>
    <div class="text-center">
        <h1 class="display-4">BHHC - REASONS FOR GETTING HIRED</h1>
    </div>

    <div id="error_reasons" class="border-danger text-danger"></div>
    <br />
    <div class="Message   text-danger"></div>

    <div class="container">

        <button id="NewReasonButton" class="btn btn-primary btn-block">New Reason Entry</button><br /><br />

        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "newReasonsForm", novalidate = "false" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <label for="FirstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">

                    @Html.ValidationSummary()
                    @Html.TextBox("FirstName", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "First Name is required" })


                </div>
            </div>
            <div class="form-group row">
                <label for="LastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    @Html.ValidationSummary()
                    @Html.TextBox("LastName", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "Last Name is required" })

                </div>
            </div>
            <div class="form-group row">

                <label for="Email" class="col-sm-2 col-form-label">Email </label>
                <div class="col-sm-10">
                    @Html.ValidationSummary()
                    @Html.TextBox("Email", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "E-mail is required" })

                </div>
            </div>
            <div class="form-group row">
                <label for="FirstReason" class="col-sm-2 col-form-label">First Reason</label>
                <div class="col-sm-10">
                    @Html.ValidationSummary()
                    @Html.TextBox("FirstReason", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "First Reason is required" })

                </div>
            </div>
            <div class="form-group row">
                <label for="SecondReason" class="col-sm-2 col-form-label">Second Reason</label>
                <div class="col-sm-10">
                    @Html.ValidationSummary()
                    @Html.TextBox("SecondReason", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "Second Reason is required" })

                </div>
            </div>
            <div class="form-group row">
                <label for="ThirdReason" class="col-sm-2 col-form-label">Third Reason</label>
                <div class="col-sm-10">
                    @Html.ValidationSummary()
                    @Html.TextBox("ThirdReason", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "Third Reason is required" })

                </div>
            </div>
            <button id="submitReasons" type="button" class="btn btn-primary">Add Reason</button>

        }
        <div id="updateFormDiv">
            <form id="updateForm">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input type="hidden" class="form-control" id="ReasonId">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="UpdateFirstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        @Html.ValidationSummary()
                        @Html.TextBox("UpdateFirstName", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "First Name is required" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="UpdateLastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">

                        @Html.ValidationSummary()
                        @Html.TextBox("UpdateLastName", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "Last Name is required" })

                    </div>
                </div>
                <div class="form-group row">
                    <label for="UpdateEmail" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">

                        @Html.ValidationSummary()
                        @Html.TextBox("UpdateEmail", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "Email is required" })

                    </div>
                </div>

                <div class="form-group row">
                    <label for="UpdateReasonOne" class="col-sm-2 col-form-label">First Reason</label>
                    <div class="col-sm-10">

                        @Html.ValidationSummary()
                        @Html.TextBox("UpdateReasonOne", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "First Reason is required" })

                    </div>
                </div>

                <div class="form-group row">
                    <label for="UpdateReasonTwo" class="col-sm-2 col-form-label">Second Reason</label>
                    <div class="col-sm-10">
                        @Html.ValidationSummary()
                        @Html.TextBox("UpdateReasonTwo", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "Second Reason is required" })

                    </div>
                </div>

                <div class="form-group row">
                    <label for="UpdateReasonThree" class="col-sm-2 col-form-label">Third Reason</label>
                    <div class="col-sm-10">
                        @Html.ValidationSummary()
                        @Html.TextBox("UpdateReasonThree", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "Third Reason is required" })
                    </div>
                </div>

                <button id="UpdateReasonButton" type="button" class="btn btn-primary">Update Reason</button>

            </form>
        </div>

        <table id="ReasonsTable" class="table table-bordered table-hover">
            <thead class=" align-content-center">
            <th>First Name</th>
            <th>Last Name</th>
            <th>First Reason</th>
            <th>Second Reason</th>
            <th>Third Reason</th>
            <th>Email</th>
            <th>Actions</th>
            </thead>
            <tbody id="ReasonsBody"></tbody>
        </table>
    </div>
</body>
</html>

@section scripts {

    <script src="~/js/site.js"></script>
   
}

